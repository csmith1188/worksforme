<%- include('../partials/header.ejs', { pageTitle: 'Calendar' }); %>

<link rel="stylesheet" href="/public/css/style.css">
<link rel="stylesheet" href="/public/css/calendar.css">

<div class="mainContainer">
    <div class="content">
        <div class="calendar">
            <div class="calendar-header">
                <button class="nav-button" id="prev-month">&lt;</button>
                <h2 id="month-year"></h2>
                <button class="nav-button" id="next-month">&gt;</button>
            </div>
            <div class="day-headers-container">
                <div class="day-header">Sun</div>
                <div class="day-header">Mon</div>
                <div class="day-header">Tue</div>
                <div class="day-header">Wed</div>
                <div class="day-header">Thu</div>
                <div class="day-header">Fri</div>
                <div class="day-header">Sat</div>
            </div>
            <div class="calendar-grid">
            </div>
        </div>
        <hr>
        <center>
            <h1 id="date-header">Select a date</h1>
            <div id="timesGrid">
                <table>
                    <tbody>
                        <% for (let i = 0; i < 6; i++) { %>
                            <tr>
                                <% for (let j = 0; j < 24; j++) { %>
                                    <td>
                                        <input type="checkbox" class="time-cell" id="time-<%= i %>-<%= j %>">
                                    </td>
                                <% } %>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </center>
    </div>
</div>

<script src="/public/clientJS/calendar.js"></script>

<%- include('../partials/footer.ejs') %>